<ul class="list-group list-group-flush">
    {% for todo in todos|default([]) %}
        <li class="list-group-item d-flex" id="task-row-{{ todo.id }}">
            <div class="d-inline-flex">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="checkbox" id="inlineCheckbox3" value="option3">
                    <label class="form-check-label" for="inlineCheckbox3">{{ todo.title }}</label>
                </div>
            </div>
            <div class="d-inline-flex ms-auto">
                <a href="{{ path('app_todos_edit', {'id': todo.id}) }}" class="btn btn-sm btn-outline-primary ms-1">
                    <i class="fa-solid fa-pencil"></i>
                </a>
                <a href="#" class="btn btn-sm btn-outline-danger ms-1 confirm-delete-task" data-id="{{ todo.id }}">
                    <i class="fa-solid fa-trash"></i>
                </a>
            </div>
        </li>
    {% endfor %}
</ul>
